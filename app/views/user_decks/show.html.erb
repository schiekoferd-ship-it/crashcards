<h1><%= @deck.title %></h1>
<p><%= @deck.description %></p>

<h2>Cards (<%= @cards.count %>)</h2>

<% @cards.each do |card| %>
  <div style="border: 1px solid #ddd; padding: 8px; margin: 8px 0;">
    <strong>Front:</strong> <%= card.front_text %><br>
    <strong>Back:</strong> <%= card.back_text %>
  </div>
<% end %>

<%= link_to "Start Practice",
            user_deck_user_card_path(@user_deck, @user_deck.user_cards.first, side: "front"),
            style: "display: inline-block; margin-top: 20px; padding: 10px 20px; background: #007bff; color: white; text-decoration: none;" %>

