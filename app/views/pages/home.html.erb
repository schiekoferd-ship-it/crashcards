<!-- The permanent HEADER is set in application.html.erb -->
<div class="container py-5">
  <!-- This is the HERO -->
<div class="py-3 mb-1" style="background: linear-gradient(180deg, rgba(25,135,84,0.15) 0%, rgba(25,135,84,0) 100%);">
  <div class="container text-center py-5">

    <span class="badge bg-white text-success border border-success mb-3">
      NEW · Rapid scenario-based language trainer
    </span>

    <h1 class="display-3 fw-bold">CrashCards</h1>
    <p class="lead text-muted mb-4">Speak confidently in the situations that matter.</p>

    <% if user_signed_in? %>
      <%= link_to "Go to My Decks", decks_path,
          class: "btn btn-success btn-lg px-4 me-2" %>
    <% else %>
      <%= link_to "Start in seconds", new_user_registration_path,
          class: "btn btn-success btn-lg px-4 me-2 shadow-sm" %>

      <%= link_to "Log In", new_user_session_path,
          class: "btn btn-outline-success btn-lg px-4" %>
    <% end %>

  </div>
</div>

<!-- HOW IT WORKS -->
<section class="py-5">
  <div class="container text-center">
    <h2 class="h3 mb-4">How CrashCards works</h2>

    <div class="row justify-content-center g-4">

      <div class="col-md-4">
        <div class="border rounded-3 p-4 h-100 shadow-sm">
          <h3 class="h5 mb-2">1. Choose your occasion</h3>
          <p class="text-muted mb-0">Job interview, parent-teacher meeting, client call – you decide.</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="border rounded-3 p-4 h-100 shadow-sm">
          <h3 class="h5 mb-2">2. Pick your language</h3>
          <p class="text-muted mb-0">English, Spanish, German or any other supported language.</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="border rounded-3 p-4 h-100 shadow-sm">
          <h3 class="h5 mb-2">3. Get your micro-deck</h3>
          <p class="text-muted mb-0">Speak confidently with essential words & phrases generated for your exact scenario.</p>
        </div>
      </div>

    </div>
  </div>
</section>

</div>
