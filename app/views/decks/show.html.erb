<div class="container py-5">

  <%# Button to go back to all decks %>
  <div class="d-flex text-center text-lg-end mb-4 mt-0">
    <%= link_to "<- Back to all decks", decks_path,
                class: "btn btn-secondary btn-sm px-3 shadow-sm" %>
  </div>

  <!-- Deck Header -->
  <header class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between mb-5">
    <div class="text-center text-lg-start mb-3 mb-lg-0">
      <span class="badge bg-white text-success border border-success rounded-pill mb-3 px-3">
        <%= @deck.target_language %>
      </span>

      <h1 class="fw-bold mb-2"><%= @deck.title %></h1>

      <p class="text-muted mb-0">
        <%= @deck.cards.count %> CrashCards in this deck
      </p>
    </div>

    <!-- Add button -->
    <div class="text-center text-lg-end">
      <%= button_to "Add to My Decks",
                    user_decks_path(deck_id: @deck.id),
                    method: :post,
                    class: "btn btn-success px-4 py-2" %>
    </div>
  </header>


  <!-- Cards Section -->
  <section id="cards-section">

    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @deck.cards.each do |card| %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0 rounded-3">
            <div class="card-body">
              <!-- Front side -->
              <span class="badge bg-success-subtle text-success rounded-pill mb-2 px-3">
                Front
              </span>
              <p class="fs-5 fw-semibold mb-3">
                <%= card.front_text %>
              </p>

              <hr class="my-3">

              <!-- Back side -->
              <span class="badge bg-light text-muted rounded-pill mb-2 px-3">
                Back
              </span>
              <p class="text-muted mb-0">
                <%= card.back_text %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>

</div>
