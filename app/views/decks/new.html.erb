            <p class="text-muted small mb-2">
              CrashCards will generate cards in this language.
            </p>
            <%= f.input :target_language,
                        collection: chat_gpt_languages,
                        label: false,
                        input_html: { class: "form-select" } %>
          </div>

          <div class="text-center">
