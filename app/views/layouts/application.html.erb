<!DOCTYPE html>
<html>
  <head>
    <title>Crashcards</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="d-flex flex-column min-vh-100 bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom shadow-sm">
      <div class="container">
        <!-- Brand -->
        <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
          <span class="fs-4 fw-bold text-success">ðŸ’¬ CrashCards</span>
        <% end %>

        <!-- Mobile toggler -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarCrashcards" aria-controls="navbarCrashcards"
                aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Center & Right Side -->
        <div class="collapse navbar-collapse justify-content-between" id="navbarCrashcards">

          <!-- Centered Links -->
          <ul class="navbar-nav mx-auto">
            <li class="nav-item mx-3">
              <%= link_to "Community Decks",
                          decks_path,
                          class: "nav-link text-success fw-semibold" %>
            </li>

            <li class="nav-item mx-3">
              <%= link_to "My CrashCards",
                          user_decks_path,
                          class: "nav-link fw-semibold",
                          style: "color: #8e44ad;" %>
            </li>
          </ul>

          <!-- Button Right -->
          <div class="d-flex">
            <%= link_to "Create New CrashCards",
                        new_deck_path,
                        class: "btn px-4 py-2",
                        style: "
                          background: rgba(142, 68, 173, 0.12);
                          color: #8e44ad;
                          border: 1px solid rgba(142, 68, 173, 0.5);
                          border-radius: 50px;
                        " %>
          </div>

        </div>

      </div>
    </nav>

    <!-- Alerts -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <!-- Page content -->
    <%= yield %>

    <!-- Footer partial -->
    <%= render 'layouts/footer' %>
  </body>
</html>
